#!/usr/bin/env bash

PID=$(hyprctl clients | rg -A 8 'workspace: 4' | rg pid | cut -d ' ' -f 2)
CURRENTWORKSPACE=$(hyprctl activeworkspace | rg workspace | cut -d ' ' -f 3)
WINDOW=$(hyprctl activeworkspace | rg 'windows:'| cut -d ' ' -f 2)

if [[ $WINDOW = 1 && $CURRENTWORKSPACE != 4 ]]; then
	hyprctl dispatch movetoworkspace "$CURRENTWORKSPACE",pid:"$PID"
	if [[ $CURRENTWORKSPACE -lt 4 ]]; then
		hyprctl dispatch swapwindow r
	elif [[ $CURRENTWORKSPACE -gt 4 ]]; then
		hyprctl dispatch swapwindow l
	fi
	echo "$PID" > ~/.config/hypr/scripts/PID4
elif [[ $WINDOW = 2 && $CURRENTWORKSPACE != 4 ]]; then
	ID=$(cat ~/.config/hypr/scripts/PID4)
	hyprctl dispatch movetoworkspacesilent 4,pid:"$ID"
	rm ~/.config/hypr/scripts/PID4
fi
